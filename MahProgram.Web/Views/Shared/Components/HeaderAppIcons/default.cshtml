@using MahProgram.DataAccess.Models.ProjectModel;
@model IQueryable<Project>

<div class="col-lg-5 col-md-12 align-self-center">
    <div class="apps">
        <div class="container-fluid">
            <div class="row rtl-row">
                @foreach (Project project in Model)
                {
                    <div class="col-lg-3 col-md-3 col-sm-3 col-3">
                        <a asp-page="/OurWorks/SingleApp" asp-route-id="@project.ProjectId" class="app-item">
                            <div class="icon">
                                <img src="/Images/ProjectImage/@project.Icon" class="img-fluid" alt="@project.Name">
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>