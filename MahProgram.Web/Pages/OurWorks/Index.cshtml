@page "/OurWorks"
@using MahProgram.DataAccess.Models.ProjectModel;
@model MahProgram.Web.Pages.OurWorks.IndexModel
@{
    ViewBag.Title = "پروژه های ما";
}

@section PageTop
    {
    <div class="cover" data-image="/assets/images/photos/parallax.jpg">
        <div class="page-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 rtl-text">
                        <h1>کار های ما</h1>
                    </div>
                    <div class="col-lg-12">
                        <ol class="breadcrumb rtl-text">
                            <li><a asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
                            <li class="active">کار های ما</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="page-bottom pbottom-70">
	<div class="container">
		<div class="row rtl-row">
            @foreach(Project item in Model.Projects)
            {
				<!-- ***** App Item Start ***** -->
				<div class="col-lg-4 col-md-6 col-sm-12">
					<div class="page-app">
						<div class="icon">
							<img src="/Images/ProjectImage/@item.Icon" alt="@item.Name">
						</div>
						<div class="app-content">
							<h5 class="title">@item.Name</h5>
							<ul class="stars">
								<li><i class="fa fa-star active"></i></li>
								<li><i class="fa fa-star active"></i></li>
								<li><i class="fa fa-star active"></i></li>
								<li><i class="fa fa-star active"></i></li>
								<li><i class="fa fa-star active"></i></li>
							</ul>
							<div class="text">
								@item.Description.Substring(0, 49)
							</div>
							<a asp-page="/OurWorks/SingleApp" asp-route-id="@item.ProjectId" class="btn-primary-line">جزئیات اپلیکیشن</a>
						</div>
					</div>
				</div>
				<!-- ***** App Item End ***** -->
            }
		</div>
	</div>
</div>
