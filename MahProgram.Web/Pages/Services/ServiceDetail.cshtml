@page "/Services/ServiceDetail/{id:int}"
@model ServiceDetailModel
@{
    ViewBag.Title = $"سرویس {Model.Service.Name}";
}



@section PageTop
    {
    <div class="cover" data-image="/assets/images/photos/parallax.jpg">
        <div class="page-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 rtl-text">
                        <h1>@Model.Service.Name</h1>
                    </div>
                    <div class="col-lg-12">
                        <ol class="breadcrumb rtl-text">
                            <li><a asp-page="/Services/Index">خدمات</a></li>
                            <li class="active">@Model.Service.Name</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="page-bottom pbottom-70">
	<div class="container">
		<div class="row rtl-row">
			<!-- ***** Content Start ***** -->
			<div class="col-lg-8 col-md-12 col-sm-12 rtl-text">
				<!-- ***** Gallery Start ***** -->
				<div class="row page-gallery-wrapper">
					<div class="col-lg-12 col-md-12 col-sm-12">
						<a href="/Images/ServiceImage/@Model.Service.ImagePath" class="page-gallery imgfix_top_container" title="@Model.Service.Name" style="overflow: hidden; position: relative;">
							<div id="imgfix_wrapper_layer_0_2" class="imgfix_wrapper_layer" style="position: relative; padding: 0; margin: 0; width: 100%; height: 100%; overflow: hidden;">
								<img src="/Images/ServiceImage/@Model.Service.ImagePath" alt="@Model.Service.Name" class="imgfix_src_img" style="opacity: 1;">
							</div>
						</a>
					</div>
				</div>
				<!-- ***** Gallery End ***** -->

				@Html.Raw(Model.Service.Description)
			</div>
			<!-- ***** Content End ***** -->
			<!-- ***** Aside Start ***** -->
			<div class="col-lg-4 col-md-12 col-sm-12">
				<aside class="default-aside">
					<div class="sidebar">
						<vc:services />
						<div class="home-services-item box active">
							<h5 class="services-title">در مورد پروژه های خود به ما بگویید و ما با جزئیات نحوه انجام این کار به شما پاسخ خواهیم داد. یا فقط از ما هر چیزی موبایل بخواهید.</h5>
							<a class="btn-white-line" asp-page="/ContactUs">ارتباط با ما</a>
						</div>
					</div>
				</aside>
			</div>
			<!-- ***** Aside End ***** -->
		</div>
	</div>
</div>
