@page "/Services"
@using MahProgram.DataAccess.Repositories.ServiceRepository;
@model MahProgram.Web.Pages.Services.IndexModel
@inject IServiceRepository repository;
@{
    ViewBag.Title = "خدمات";
}

@section PageTop
    {
    <div class="cover" data-image="/assets/images/photos/parallax.jpg">
        <div class="page-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 rtl-text">
                        <h1>خدمات</h1>
                    </div>
                    <div class="col-lg-12">
                        <ol class="breadcrumb rtl-text">
                            <li><a asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
                            <li class="active">خدمات</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="page-bottom pbottom-70">
    <div class="container">
        <div class="row">
            @foreach (var service in repository.GetAll())
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a asp-page="/Services/ServiceDetail" asp-route-id="@service.ServiceId" class="home-services-item">
                        <i class="fa fa-@service.Icon"></i>
                        <h5 class="services-title">@service.Name</h5>
                        <p>@Html.Raw(service.Description.Substring(0, 49)) ..</p>
                    </a>
                </div>
            }
        </div>
    </div>
</div>